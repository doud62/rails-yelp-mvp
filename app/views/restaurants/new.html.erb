<%= simple_form_for [ @restaurant ] do |f| %>
  <%= f.input :name, class: "my-3" %>
  <%= f.input :address, class: "my-3" %>
  <%= f.input :phone_number, class: "my-3" %>
  <%= f.input :category, class: "my-3"%>
  <%= f.submit "Create Restaurant", class: "btn btn-primary my-3" %>
<% end %>

<p><%= link_to "Back", restaurants_path %></p>